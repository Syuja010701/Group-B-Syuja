<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bayar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:background="#EB5757">
        </ImageView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/menu1"></ImageView>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/menu2"></ImageView>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/menu3"></ImageView>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/menu4"></ImageView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tampil"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Harap Cek Kembali Pesannan Anda :"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#4F4F4F">
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#4F4F4F"
            android:layout_marginTop="3dp">

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Pesan Lagi"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:backgroundTint="#55E948"
            android:id="@+id/pesanlagi">
        </Button>

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:backgroundTint="#EB5757"
                android:id="@+id/selesai"
                android:layout_margin="20dp">
            </Button>

        </LinearLayout>



    </LinearLayout>

</ScrollView>